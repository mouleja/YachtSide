    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="YachtSide" Grid.ColumnSpan="4" HorizontalAlignment="Center" FontFamily="Arial" FontSize="48"/>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            
            <TextBlock Text="Dice:" Grid.Row="0" FontWeight="Black" FontSize="24" />
            <StackPanel Grid.Row="1" Orientation="Horizontal" >
                <TextBox Name="die1" Margin="5" Text="X" FontSize="36" VerticalAlignment="Center" IsReadOnly="True" IsTabStop="False"/>
                <TextBox Name="die2" Margin="5" Text="X" FontSize="36" VerticalAlignment="Center" IsReadOnly="True" IsTabStop="False"/>
                <TextBox Name="die3" Margin="5" Text="X" FontSize="36" VerticalAlignment="Center" IsReadOnly="True" IsTabStop="False"/>
                <TextBox Name="die4" Margin="5" Text="X" FontSize="36" VerticalAlignment="Center" IsReadOnly="True" IsTabStop="False"/>
                <TextBox Name="die5" Margin="5" Text="X" FontSize="36" VerticalAlignment="Center" IsReadOnly="True" IsTabStop="False" />
            </StackPanel>
            <TextBlock Grid.Row="2" Text="Keep ?" FontSize="18"/>
            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Left" Margin="10,0,0,0" Width="360">
                <CheckBox Style="{StaticResource CheckBoxStyle2}" Name="keep1" Margin="20,0,20,0" Width="32" IsEnabled="False"/>
                <CheckBox Style="{StaticResource CheckBoxStyle2}" Name="keep2" Margin="20,0,20,0" Width="32" IsEnabled="False"/>
                <CheckBox Style="{StaticResource CheckBoxStyle2}" Name="keep3" Margin="20,0,20,0" Width="32" IsEnabled="False"/>
                <CheckBox Style="{StaticResource CheckBoxStyle2}" Name="keep4" Margin="20,0,20,0" Width="32" IsEnabled="False"/>
                <CheckBox Style="{StaticResource CheckBoxStyle2}" Name="keep5" Margin="20,0,20,0" Width="32" IsEnabled="False"/>
            </StackPanel>
            <Button Name="RollButton" Grid.Row="4" Content="Roll #1" Height="50" FontSize="30" HorizontalAlignment="Center" Click="RollButton_Click" IsTabStop="True"/>
            <TextBlock x:Name="TurnCounter" Grid.Row="5" Text="Turn # 1"/>
            <TextBlock Name="GameOverTextBlock" Grid.Row="6" Text="Game Over!" FontSize="36" HorizontalAlignment="Center" FontStyle="Italic" 
                       Margin="20" Visibility="Collapsed" Foreground="Red"/>
            <Button x:Name="PlayAgainButton" Grid.Row="7" HorizontalAlignment="Center" Content="Play Again" Visibility="Collapsed" Click="PlayAgainButton_Click"/>
        </Grid>

        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
