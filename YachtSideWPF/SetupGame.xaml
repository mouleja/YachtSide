<UserControl x:Class="YachtSideWPF.SetupGame"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YachtSideWPF"
             mc:Ignorable="d" 
             Background="White"
             d:DesignHeight="500" d:DesignWidth="700">
    <StackPanel Orientation="Vertical">
        <TextBlock Text="Welcome to YachtSide!!!" HorizontalAlignment="Center" 
                   FontSize="18" FontStyle="Italic" Margin="0, 10, 0, 10"/>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Select Player:"/>
            <ComboBox Name="PlayerComboBox" MinWidth="100" MaxHeight="30" Margin="5 0" 
                       SelectionChanged="PlayerListView_SelectionChanged"/>
            <TextBlock Text="Or Add New Player - Name: "/>
            <TextBox x:Name="NewPlayerTextBox" MinWidth="100" />
            <Button x:Name="AddNewPlayerButton" Content="Add" Click="AddNewPlayerButton_Click" />
        </StackPanel>


    </StackPanel>
</UserControl>
