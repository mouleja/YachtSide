<UserControl x:Class="YachtSideWPF.ScoresUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YachtSideWPF"
             mc:Ignorable="d" Background="White"
             d:DesignHeight="500" d:DesignWidth="700">
    <StackPanel>
        <TextBlock Text="High Scores" HorizontalAlignment="Center" FontSize="24" FontWeight="DemiBold"/>
        <Button x:Name="CloseScoresButton" Content="Close" FontSize="18" FontWeight="Bold"
                Width="300" Margin="10" Click="CloseScoresButton_Click"/>
    </StackPanel>
</UserControl>
